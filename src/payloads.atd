type message =
  { player_name <json name="playerName"> : string
  ; time : string
  ; text : string
  }

type tile =
  { desc : string
  ; messages : message list
  }

type posn =
  { x : int
  ; y : int
  }

type buildable =
  { percent : int
  ; kind : string
  }

type artifact =
  { text : string
  }

type player_status =
  { wood : int
  ; rock : int
  ; posn : posn
  ; buildables : buildable list
  ; artifacts : artifact list
  }

type response =
  { tile : tile
  ; player_status <json name="player"> : player_status
  }

(* This playload is a repeated many times, so we keep it concise *)
type map_tile =
  { p : bool (* players *)
  ; w : bool (* wood *)
  ; r : bool (* rock *)
  ; m : bool (* messages *)
  }

type map_payload =
  { tiles : map_tile list list
  ; ?player : (int * int) option
  }
